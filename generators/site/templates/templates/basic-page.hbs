---
{
  "title": "Basic Page",
  "availableBlocks": ["cta"],
  "schema": [
    {
      "name": "Greeting Message",
      "uid": "greeting",
      "type": "text"
    },
    {
      "name": "Content",
      "uid": "body",
      "type": "richtext"
    }
  ]
}
---
{{#> layout }}
  <div class="content">
    <h1>{{settings.greeting}}</h1>

    {{{renderRichText settings.body}}}

    {{#each blocks}}
      {{renderBlock this}}
    {{/each}}
  </div>
{{/layout}}
